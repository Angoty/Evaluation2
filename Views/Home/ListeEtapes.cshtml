@{
    ViewData["Title"] = "Import des points";
    ViewData["Profil"] = "Admin";
}
@model EtapeViewModel
<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Penalités de points pour:</h4>
                </div>
            </div>
            <br>
            <form action="@Url.Action("NouveauPenalite", "Home")"  method="post" enctype = "multipart/form-data">
                <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Etapes:</label>
                        <div class="col-sm-12 col-md-10">
                            <select class="custom-select col-12" name="etape">
                                @foreach(var etape in @Model.etapes){
                                    <option value="@etape.idEtape" selected>@etape.intitule</option>
                            }
                            </select>
                        </div>
					</div>
                <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Equipe:</label>
                        <div class="col-sm-12 col-md-10">
                            <select class="custom-select col-12" name="equipe">
                                @foreach(var utilisateur in @Model.equipes){
                                    <option value="@utilisateur.idUtilisateur" selected>@utilisateur.nom</option>
                                }
                            </select>
                        </div>
					</div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Temps de pénalité</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" type="time" step="1" name="penalite">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </form>
        </div>
    </div>
</div>